load("@rules_jvm_external//:defs.bzl", "artifact")
load("//java:defs.bzl", "java_export")
load("//java:version.bzl", "SE_VERSION")
load("//:copy_file.bzl", "copy_file")

java_export(
    name = "xpi",
    srcs = glob(["*.java"]),
    maven_coordinates = "org.seleniumhq.automationAgent:automationAgent-firefox-xpi-driver:%s" % SE_VERSION,
    pom_template = "//java/client/src/org/smartqa/automationagent:template-pom",
    resources = [
        ":amd64",
        ":i386",
        ":webdriver_xpi",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//java:auto-service",
        "//java/client/src/org/smartqa/automationagent:core",
        "//java/client/src/org/smartqa/automationagent/firefox",
        "//java/client/src/org/smartqa/automationagent/remote",
        artifact("com.google.guava:guava"),
    ],
)

copy_file(
    name = "webdriver_xpi",
    src = "//third_party/js/automationagent:webdriver_xpi",
    out = "webdriver.xpi",
)

copy_file(
    name = "i386",
    src = "//cpp/prebuilt:noblur32",
    out = "x86/x_ignore_nofocus.so",
)

copy_file(
    name = "amd64",
    src = "//cpp/prebuilt:noblur64",
    out = "amd64/x_ignore_nofocus.so",
)
