        "//java/client/src/org/smartqa/automationagent/remote",
        "//java/client/test/org/smartqa/automationagent/environment",
        "//java/client/test/org/smartqa/automationagent/testing:annotations",
        "//java/client/test/org/smartqa/automationagent/testing:test-base",
        "//java/client/test/org/smartqa/automationagent/testing/drivers",
        artifact("junit:junit"),
        artifact("org.assertj:assertj-core"),
    ],
